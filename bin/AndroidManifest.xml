<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tech.lokal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tech.lokal.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--  Entry for RegisterActivity.class  -->
        <activity android:name="com.tech.lokal.RegisterActivity"
            	  android:label="Register New Account"> </activity>
        <!--  Entry for CategoryActivity.class -->
        <activity android:name="com.tech.lokal.CategoryActivity"
            	  android:label="Categories" > </activity>
        <!--  Entry for HttpLokal.class to test Http -->
        <activity android:name="com.tech.lokal.HttpLokal"
            	  android:label="Http Example"> </activity>
        
        <!--  Entry for EventActivity Class. (Our Event Timeline) -->
        <activity android:name="com.tech.lokal.EventActivity"
            	  android:label="Event Timeline"></activity>
        
        <!--  Entry for EventDetailActivity Class. (Shows the details of the Event) -->
         <activity android:name="com.tech.lokal.EventDetailActivity"
            	   android:label="Event Details"></activity>
         
         <!-- Entry for CreateEventActivity class (Here's where you upload an Event) -->
         <activity android:name="com.tech.lokal.CreateEventActivity"
             	   android:label="Create your Event!" ></activity>
         
         <!--  Entry for SettingsActivity class (Here's where the user's settings are  -->
         <activity android:name="com.tech.lokal.SettingsActivity"
             	   android:label="Settings"> </activity>
         
           <!--  Entry for MyEventsActivity class (Here's wherethe user can view their uploaded events -->
         <activity android:name="com.tech.lokal.MyEventsActivity"
             	   android:label="My Events"> </activity>
         
    </application>
    
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

</manifest>
