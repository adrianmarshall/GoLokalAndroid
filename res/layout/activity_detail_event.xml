<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >  
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
          <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

              <RelativeLayout 
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  
         
              <TextView
                  android:id="@+id/event_title"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:hint="Event Title"
                  android:paddingBottom="5dip"
                  android:paddingLeft="10dp"
                  android:paddingRight="10dp"
                  android:paddingStart="10dp"
                  android:paddingTop="15dp"
                  android:textColor="#000000"
                  android:textSize="16sp"
                  android:textStyle="bold" />
        
  	     
        <ImageView
            android:id="@+id/img_event"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:layout_below="@id/event_title"
         	android:contentDescription="Event Photo"
            android:layout_gravity="center"
            android:padding="5dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/img_event"
            android:hint="Date" />

	     </RelativeLayout>
	     
         <TextView 
             android:id="@+id/description"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Description"
             android:layout_marginLeft="20dp"
             android:layout_marginStart="20dp"
             android:layout_marginTop="30dp"
             />

         <TextView
             android:id="@+id/description_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Description text"
             android:layout_marginLeft="30dp"
             android:textAppearance="?android:attr/textAppearanceSmall" />
         
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="180dp" >

         <TextView
             android:id="@+id/startTime"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="Start Time-"
             android:textSize="14sp" />

           <TextView
               android:id="@+id/startTime_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/startTime"
               android:layout_alignBottom="@+id/startTime"
               android:layout_toRightOf="@+id/startTime"
               android:hint="Start Time"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/endTime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/startTime_text"
               android:layout_alignBottom="@+id/startTime_text"
               android:layout_marginLeft="32dp"
               android:layout_toRightOf="@+id/startTime_text"
               android:text="End Time-"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/endTime_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/endTime"
               android:layout_alignBottom="@+id/endTime"
               android:layout_toRightOf="@+id/endTime"
               android:hint="End Time"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/where"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/startTime"
               android:layout_marginTop="16dp"
               android:text="Where:"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/locationName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:hint="Location Name"
               android:textSize="14sp" />

           <TextView
               android:id="@+id/addressLine1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/locationName"
               android:hint="Address Line 1" />

           <TextView
               android:id="@+id/addressLine2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/addressLine1"
               android:hint="Address Line 2" />

           <TextView
               android:id="@+id/city"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true"
               android:layout_below="@+id/addressLine2"
               android:hint="City" />

           <TextView
               android:id="@+id/city_delimiter"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/addressLine2"
               android:layout_toRightOf="@+id/city"
               android:text="," />

           <TextView
               android:id="@+id/state"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/city_delimiter"
               android:layout_alignBottom="@+id/city_delimiter"
               android:layout_toEndOf="@+id/city_delimiter"
               android:layout_toLeftOf="@+id/startTime_text"
               android:layout_toRightOf="@+id/city_delimiter"
               android:hint="State" />

           <TextView
               android:id="@+id/zipcode"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/state"
               android:layout_alignBottom="@+id/state"
               android:layout_toRightOf="@+id/state"
               android:hint="Zipcode" />

           <TextView
               android:id="@+id/postBy"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/zipcode"
               android:layout_toLeftOf="@+id/endTime_text"
               android:text="Posted by:" />

           <TextView
               android:id="@+id/eventUser"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_toLeftOf="@+id/endTime_text"
               android:hint="User" />
         
         </RelativeLayout>
	</LinearLayout>
        
    </ScrollView>

</RelativeLayout>
