<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    


	<TextView
	android:id="@+id/event_id"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:visibility="gone" />
    
      <!--  LinearLayout
        android:id="@+id/llImage"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@id/event_title"
        android:orientation="vertical" -->

        <ImageView
            android:id="@+id/img_event"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:padding="5dp" />
        
	<!--  /LinearLayout -->

      <TextView
          android:id="@+id/event_title"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/img_event"
          android:hint="Event Title"
          android:paddingBottom="15dip"
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:paddingStart="10dp"
          android:paddingTop="15dp"
          android:textColor="#F15A24"
          android:textSize="16sp"
          android:textStyle="bold"
          android:maxLines="2" />

      <TextView
          android:id="@+id/event_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/event_title"
          android:layout_alignBottom="@+id/event_title"
          android:layout_alignParentRight="true"
          android:layout_marginRight="18dp"
          android:text="Time"
          android:textSize="15sp" />

        <TextView
            android:id="@+id/event_day"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_time"
            android:maxLines="1"
            android:text="Day of Event"
            android:textSize="15sp" />

               <TextView
                   android:id="@+id/event_description"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/event_day"
                   android:layout_centerHorizontal="true"
                   android:layout_marginTop="29dp"
                   android:text="Short Description"
                   android:maxLines="2"
                   android:textSize="15sp"
                   android:textStyle="italic" />
    
</RelativeLayout>
